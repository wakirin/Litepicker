{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard", "plugin:compat/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "always"]
    },
    "settings": {
        "polyfills": [
          "Symbol.toStringTag",
          "Object.entries",
          "Object.assign",
          "Intl.PluralRules",
          "window.scrollX",
          "Object.getOwnPropertySymbols",
          "Number.isNaN"
        ]
    }
}
